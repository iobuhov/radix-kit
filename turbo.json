{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",

  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "w:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "w:build:dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "m:build": {
      "dependsOn": ["^w:build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "radix-ui-styles#dev": {
      "dependsOn": ["^build"]
    }
  }
}
