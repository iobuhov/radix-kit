{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "build:pkg": "pnpm --filter @radix-ui/themes build",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "@types/react-dom": "^18.2.0",
      "@types/react": "^18.2.0",
      "react": "^18.2.0",
      "string-width": "4.2.3",
      "@mendix/pluggable-widgets-tools": "^10.15.0"
    }
  }
}
