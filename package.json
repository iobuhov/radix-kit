{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev dev:ts --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "create:widget": "pnpm run plop --filter=plop-widget-cli",
    "set-project": "pnpm tsx scripts/set-project.mts",
    "dev:setup": "pnpm install && pnpm set-project"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "create-mx-widget": "workspace:^",
    "prettier": "^3.4.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "prettier": "^3.4.2",
      "@types/react-dom": "^18.2.0",
      "@types/react": "^18.2.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "string-width": "4.2.3",
      "@mendix/pluggable-widgets-tools": "^10.15.0",
      "@prettier/plugin-xml": "^3.4.1"
    }
  },
  "dependencies": {
    "tsx": "^4.19.2",
    "zx": "^8.3.2"
  }
}
